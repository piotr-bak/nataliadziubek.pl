{
    "extends": ["./node_modules/gts/", "plugin:react/recommended"],
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest": true
    },
    "rules": {
        "indent": ["error", 4],
        "react/prop-types": "off",
        "no-unused-vars": "warn",
        "prettier/prettier": 0,
        "node/no-unsupported-features/es-syntax": [
            "error",
            {
                "ignores": ["modules"]
            }
        ],
        "node/no-missing-import": [
            "error",
            {
                "allowModules": [],
                "resolvePaths": ["/src/components"],
                "tryExtensions": [".js", ".jsx", ".json", ".node"]
            }
        ]
    },
    "parserOptions": {
        "sourceType": "module"
    }
}
